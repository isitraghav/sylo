        // Add audit form submission
        document.getElementById('addAuditForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const submitBtn = document.getElementById('submitAuditBtn');
            const cancelBtn = document.getElementById('cancelAuditBtn');
            const btnText = submitBtn.querySelector('.btn-text');
            const btnLoader = submitBtn.querySelector('.btn-loader');

            submitBtn.disabled = true;
            cancelBtn.classList.add('hidden');
            btnText.classList.add('hidden');
            btnLoader.classList.remove('hidden');

            const formData = new FormData(this);
            const auditData = {};

            for (let [key, value] of formData.entries()) {
                auditData[key] = value;
            }

            try {
                const response = await fetch('/api/audits', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    alert('Audit created successfully!');
                    location.reload();
                } else {
                    console.log("response", result)
                    alert('Failed to create audit: ' + result.message);
                    submitBtn.disabled = false;
                    cancelBtn.classList.remove('hidden');
                    btnText.classList.remove('hidden');
                    btnLoader.classList.add('hidden');
                }
            } catch (error) {
                console.error('Error creating audit:', error);
                alert('Error creating audit. Please try again.');
                submitBtn.disabled = false;
                cancelBtn.classList.remove('hidden');
                btnText.classList.remove('hidden');
                btnLoader.classList.add('hidden');
            }
        });

