    <script>
        // All JavaScript functions remain exactly the same
        document.addEventListener('DOMContentLoaded', function () {
            try {
                if (typeof bootstrap === 'undefined') {
                    console.error('Bootstrap is not loaded!');
                    return;
                }

                const modalElement = document.getElementById('uploadModal');
                if (!modalElement) {
                    console.error('Modal element not found!');
                    return;
                }

                const modal = new bootstrap.Modal(modalElement);
                window.uploadModal = modal;

                const orthoTypeSelect = document.getElementById('modalOrthoType');
                const fileUpload = document.getElementById('modalFileUpload');
                const submitButton = document.getElementById('submitUpload');

                if (orthoTypeSelect) {
                    orthoTypeSelect.addEventListener('change', validateForm);
                }

                if (fileUpload) {
                    fileUpload.addEventListener('change', function (e) {
                        validateForm();
                        updateSelectedFilesList(e.target.files);
                    });
                }

                if (submitButton) {
                    submitButton.addEventListener('click', function () {
                        const orthoType = orthoTypeSelect ? orthoTypeSelect.value : '';
                        const files = fileUpload ? fileUpload.files : null;

                        if (orthoType && files && files.length > 0) {
                            handleFileUpload(files, currentAuditId, orthoType);
                            modal.hide();
                        }
                    });
                }
            } catch (error) {
                console.error('Error initializing modal:', error);
            }
        });

        let currentAuditId = null;

        function openUploadModal(auditId) {
            try {
                if (!window.uploadModal) {
                    console.error('Modal not initialized!');
                    return;
                }

                currentAuditId = auditId;

                const orthoTypeSelect = document.getElementById('modalOrthoType');
                const fileUpload = document.getElementById('modalFileUpload');
                const selectedFilesList = document.getElementById('selectedFilesList');
                const submitButton = document.getElementById('submitUpload');

                if (orthoTypeSelect) orthoTypeSelect.value = '';
                if (fileUpload) fileUpload.value = '';
                if (selectedFilesList) selectedFilesList.innerHTML = '';
                if (submitButton) submitButton.disabled = true;

                window.uploadModal.show();
            } catch (error) {
                console.error('Error opening modal:', error);
            }
        }

        function validateForm() {
            try {
                const orthoType = document.getElementById('modalOrthoType')?.value;
                const files = document.getElementById('modalFileUpload')?.files;
                const submitButton = document.getElementById('submitUpload');

                if (submitButton) {
                    submitButton.disabled = !orthoType || !files || files.length === 0;
                }
            } catch (error) {
                console.error('Error validating form:', error);
            }
        }

        function updateSelectedFilesList(files) {
            try {
                const fileList = document.getElementById('selectedFilesList');
                if (!fileList) return;

                fileList.innerHTML = '';
                if (files && files.length > 0) {
                    const ul = document.createElement('ul');
                    ul.className = 'list-group';
                    Array.from(files).forEach(file => {
                        const li = document.createElement('li');
                        li.className = 'list-group-item';
                        li.textContent = `${file.name} (${(file.size / 1024 / 1024).toFixed(2)} MB)`;
                        ul.appendChild(li);
                    });
                    fileList.appendChild(ul);
                }
            } catch (error) {
                console.error('Error updating file list:', error);
            }
        }

        function handleFileUpload(files, auditId, orthoType) {
            try {
                const formData = new FormData();
                for (let i = 0; i < files.length; i++) {
                    formData.append('files', files[i]);
                }
                formData.append('audit_id', auditId);
                formData.append('ortho_type', orthoType);

                const xhr = new XMLHttpRequest();
                xhr.open("POST", "/upload");

                xhr.upload.addEventListener("progress", (e) => {
                    if (e.lengthComputable) {
                        const progressBar = document.getElementById('progressBar');
                        if (progressBar) {
                            progressBar.value = (e.loaded / e.total) * 100;
                        }
                    }
                });

                xhr.onload = () => {
                    if (xhr.status === 200) {
                        alert("Upload complete");
                    } else {
                        alert("Upload failed");
                    }
                };

                xhr.onerror = () => {
                    alert("Upload failed");
                };

                xhr.send(formData);
            } catch (error) {
                console.error('Error handling file upload:', error);
                alert("An error occurred during upload");
            }
        }

        // Tab functionality
        function showTab(tabName) {
            document.querySelectorAll('.tab-pane').forEach(pane => {
                pane.classList.remove('active');
            });

            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
            });

